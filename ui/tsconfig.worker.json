{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2020",
        "outDir": "dist/cron",
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "./cron/*"
            ]
        }
    },
    "include": [
        "cron/**/*.ts"
    ]
}